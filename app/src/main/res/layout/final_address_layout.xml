<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:background="@color/grey_less"
  android:layout_height="match_parent">

  <include layout="@layout/base_toolbar"/>

  <Button
    android:id="@+id/continueButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/signup_blue"
    android:text="CONTINUE"
    android:textColor="@color/white"
    android:textSize="14sp"
    android:visibility="visible"/>


  <RelativeLayout
    android:id="@+id/stepsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

    <RelativeLayout
      android:id="@+id/upper_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp">

        <View
          android:id="@+id/line1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_centerVertical="true"
          android:background="@color/disabled"/>

        <TextView
          android:id="@+id/step1"
          android:layout_width="26.5dp"
          android:layout_height="26.5dp"
          android:background="@drawable/blue_circle"
          android:gravity="center"
          android:text="1"
          android:textColor="@color/white"
          android:textSize="12sp"/>

        <TextView
          android:id="@+id/step2"
          android:layout_width="26.5dp"
          android:layout_height="26.5dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="55dp"
          android:background="@drawable/blue_circle"
          android:gravity="center"
          android:text="2"
          android:textColor="@color/white"
          android:textSize="12sp"/>

        <TextView
          android:id="@+id/step3"
          android:layout_width="26.5dp"
          android:layout_height="26.5dp"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="55dp"
          android:background="@drawable/blue_circle"
          android:gravity="center"
          android:text="3"
          android:textColor="@color/grey_less"
          android:textSize="12sp"/>
      </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/delivery_address"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/upper_layout"
      android:padding="20dp">

      <android.support.v7.widget.CardView
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        app:contentPadding="10dp">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Delivery Address"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"/>

          <ImageView
            android:id="@+id/edit_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/title"
            android:tint="@color/dark_blue"
            app:srcCompat="@drawable/ic_edit"/>


          <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text=""
            android:textColor="@color/flight_review_black"
            android:textSize="12sp"/>

        </RelativeLayout>

      </android.support.v7.widget.CardView>

<!--      <android.support.v7.widget.CardView
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_layout"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        app:contentPadding="10dp">


