                  android:layout_marginTop="10dp"
                  android:fontFamily="sans-serif-smallcaps"
                  android:text=""
                  android:textColor="@color/flight_review_black"
                  android:textSize="12sp"/>

              </RelativeLayout>

            </android.support.v7.widget.CardView>-->

      <android.support.v7.widget.CardView
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_layout"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        app:contentPadding="10dp">


        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:padding="10dp">

          <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Phone"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"/>

          <ImageView
            android:id="@+id/edit_image_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/phone"
            android:tint="@color/dark_blue"
            app:srcCompat="@drawable/ic_edit"/>


          <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:text="9654887711"
            android:textColor="@color/review_black"
            android:textSize="12sp"/>

        </RelativeLayout>

      </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/confirm_order"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/upper_layout"
      android:visibility="gone"
      android:padding="20dp">

      <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-smallcaps"
          android:text="Total Price"
          android:textColor="@color/black"
          android:textSize="20sp"/>

        <TextView
          android:id="@+id/total_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:text="\u20B91444"
          android:textColor="@color/black"
          android:textSize="20sp"/>
      </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/place_order"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/upper_layout"
      android:padding="20dp">

      <TextView
        android:id="@+id/header"
        android:text="Select Payment Modes"
        android:textColor="@color/review_black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <RadioGroup
        android:id="@+id/payment_group"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CASH ON DELIVERY"
          android:fontFamily="sans-serif-smallcaps"
          android:id="@+id/cash"
          android:checked="true"
          android:textSize="16sp" />

        <RadioButton
          android:fontFamily="sans-serif-smallcaps"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CHEQUE ON DELIVERY"
          android:id="@+id/cheque"
          android:checked="false"
          android:textSize="16sp"/>

        <RadioButton
          android:fontFamily="sans-serif-smallcaps"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ACCOUNT TRANSFER ON DELIVERY"
          android:id="@+id/account"
          android:checked="false"
          android:textSize="16sp"/>


      </RadioGroup>





    </RelativeLayout>

  </RelativeLayout>


</RelativeLayout>