<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/grey_less">

  <include layout="@layout/base_toolbar"/>

  <Button
    android:id="@+id/continueButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/signup_blue"
    android:text="CONTINUE"
    android:textColor="@color/white"
    android:textSize="14sp"
    android:visibility="visible"/>


  <RelativeLayout
    android:id="@+id/stepsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

    <RelativeLayout
      android:id="@+id/upper_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp">

        <View
          android:id="@+id/line1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_centerVertical="true"
          android:background="@color/disabled"/>

        <TextView
          android:id="@+id/step1"
          android:layout_width="26.5dp"
          android:layout_height="26.5dp"
          android:background="@drawable/blue_circle"
          android:gravity="center"
          android:text="1"
          android:textColor="@color/white"
          android:textSize="12sp"/>

        <TextView
          android:id="@+id/step2"
          android:layout_width="26.5dp"
          android:layout_height="26.5dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="55dp"
          android:background="@drawable/blue_circle"
          android:gravity="center"
          android:text="2"
          android:textColor="@color/white"
          android:textSize="12sp"/>

        <TextView
          android:id="@+id/step3"
          android:layout_width="26.5dp"
          android:layout_height="26.5dp"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="55dp"
          android:background="@drawable/blue_circle"
          android:gravity="center"
          android:text="3"
          android:textColor="@color/grey_less"
          android:textSize="12sp"/>
      </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
      android:layout_below="@+id/upper_layout"
      android:id="@+id/delivery_address"
      android:layout_width="match_parent"
      android:padding="20dp"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/title"
        android:textColor="@color/flight_review_black"
        android:text="Delivery Address"
        android:textSize="32sp"
        android:fontFamily="sans-serif-medim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <ImageView
        android:id="@+id/edit_image"
        android:layout_toRightOf="@+id/title"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_edit"/>

      <TextView
        android:text=""
        android:textColor="@color/flight_home_grey"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:id="@+id/address"
        android:fontFamily="sans-serif"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


      <TextView
        android:id="@+id/email"
        android:textColor="@color/flight_review_black"
        android:text="Email"
        android:textSize="32sp"
        android:layout_below="@+id/address"
        android:fontFamily="sans-serif-medim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <TextView
        android:text=""
        android:textColor="@color/flight_home_grey"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email"
        android:id="@+id/email_id"
        android:fontFamily="sans-serif"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>