<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

  <RelativeLayout
    android:id="@+id/header_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/user_image"
      android:layout_width="73.1dp"
      android:layout_height="73.1dp"
      android:src="@drawable/profile"
      app:border_color="@color/circle_image_border"
      app:border_width="1.3dp"/>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@+id/user_image"
      android:layout_toRightOf="@+id/user_image"
      android:text="Shubham Srivastava"
      android:id="@+id/name"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="18dp"
      android:tag="@string/regular"
      android:textSize="22.5sp"
      android:textColor="@color/tabTheme"
      />

    <ImageView
      android:layout_toEndOf="@+id/user_image"
      android:layout_toRightOf="@+id/user_image"
      android:src="@drawable/ic_location_on_orange_48dp"
      android:layout_below="@+id/name"
      android:layout_width="16dp"
      android:id="@+id/location"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="18dp"
      android:layout_height="16dp"/>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:tag="@string/regular"
      android:layout_toEndOf="@+id/location"
      android:layout_toRightOf="@+id/location"
      android:text="Sidney, Australia"
      android:id="@+id/address"
      android:layout_marginTop="5dp"
      android:layout_below="@+id/name"
      android:textSize="13sp"
      android:textColor="@color/tabTheme"
      />


  </RelativeLayout>

  <View
    android:id="@+id/separator_one"
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:layout_below="@+id/header_layout"
    android:background="@color/separator"/>

  <RelativeLayout
    android:id="@+id/phone_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/separator_one"
    android:clickable="true"
    android:background="@drawable/ripple"
    android:padding="16dp">

    <ImageView
      android:id="@+id/phone_image"
      android:layout_width="20.3dp"
      android:layout_height="20.3dp"
      android:src="@drawable/phone"/>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:textColor="@color/tabTheme"
      android:id="@+id/phone"
      android:layout_toEndOf="@+id/phone_image"
      android:layout_toRightOf="@+id/phone_image"
      android:text="9654887711"
      android:tag="@string/regular"
      android:textSize="16.9sp"/>
  </RelativeLayout>

  <View
    android:id="@+id/separator_two"
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:layout_below="@+id/phone_layout"
    android:background="@color/separator"/>


  <RelativeLayout
    android:id="@+id/email_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/separator_two"
    android:clickable="true"
    android:background="@drawable/ripple"
    android:padding="16dp">

    <ImageView
      android:id="@+id/email_image"
      android:layout_width="20.3dp"
      android:layout_height="20.3dp"
      android:src="@drawable/email"/>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:tag="@string/regular"
      android:id="@+id/email"
      android:textColor="@color/tabTheme"
      android:layout_toEndOf="@+id/email_image"
      android:layout_toRightOf="@+id/email_image"
      android:text="shubham7393@gmail.com"
      android:textSize="16.9sp"/>
  </RelativeLayout>

  <View
    android:id="@+id/separator_three"
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:layout_below="@+id/email_layout"
    android:background="@color/separator"/>

  <RelativeLayout
    android:id="@+id/logout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/separator_three"
    android:clickable="true"
    android:background="@drawable/ripple"
    android:padding="16dp">

    <ImageView
      android:id="@+id/logout_image"
      android:layout_width="20.3dp"
      android:layout_height="20.3dp"
      android:rotation="90"
      android:src="@drawable/logout"/>

    <abominable.com.wholeseller.common.WMTextView
      android:tag="@string/regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_toEndOf="@+id/logout_image"
      android:textColor="@color/tabTheme"
      android:layout_toRightOf="@+id/logout_image"
      android:text="Logout"
      android:textSize="16.9sp"/>
  </RelativeLayout>

  <View
    android:id="@+id/separator_four"
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:layout_below="@+id/logout"
    android:background="@color/separator"/>


</RelativeLayout>