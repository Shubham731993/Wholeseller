<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:orientation="vertical"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:contentPadding="10dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


  <!--  <TextView
      android:id="@+id/item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-smallcaps"
      android:text="Masoor Dal"
      android:textColor="@color/black"
      android:textSize="20sp"/>-->

    <RelativeLayout
      android:layout_centerVertical="true"
      android:id="@+id/quantity_layout"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">


    <abominable.com.wholeseller.common.WMTextView
      android:id="@+id/item_quantity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="25 kgs"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:tag="@string/light"/>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_toRightOf="@+id/item_quantity"
      android:layout_toEndOf="@+id/item_quantity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="X"
      android:layout_marginLeft="10dp"
      android:id="@+id/multiply"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:tag="@string/light"/>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_toRightOf="@+id/multiply"
      android:layout_toEndOf="@+id/multiply"
      android:id="@+id/item_price"
      android:layout_marginLeft="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="\u20B9144"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:tag="@string/light"/>

    </RelativeLayout>

    <abominable.com.wholeseller.common.WMTextView
      android:layout_centerVertical="true"
      android:id="@+id/item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     android:tag="@string/regular"
      android:text="Masoor Dal"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/quantity_layout"
      android:textColor="@color/black"
      android:textSize="20sp"/>

  </RelativeLayout>


</android.support.v7.widget.CardView>