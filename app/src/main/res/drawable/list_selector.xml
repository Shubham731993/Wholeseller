<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:drawable="@color/list_normal" android:state_window_focused="false"/>

  <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
  <item android:drawable="@color/list_disabled" android:state_enabled="false" android:state_focused="true" android:state_pressed="true"/>
  <item android:drawable="@color/list_disabled" android:state_enabled="false" android:state_focused="true"/>
  <item android:drawable="@color/list_pressed" android:state_focused="true" android:state_pressed="true"/>
  <item android:drawable="@color/list_pressed" android:state_focused="false" android:state_pressed="true"/>
  <item android:drawable="@color/list_focus" android:state_focused="true"/>

</selector>